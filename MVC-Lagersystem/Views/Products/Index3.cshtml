@model ProductCategoryVM


@{
    ViewData["Title"] = "Index3";
}

<h1> Index1</h1>



<form asp-action="Filter2">
    <div class="input-group mb-2">
        <input type="text" class="form-control" asp-for="Name" placeholder="Search on name" />
        <div class="input-group-append">
            <select asp-for="Category" asp-items="@Model.Categorys" class="form-control">
                <option selected="selected" value="">Please select</option>
            </select>
